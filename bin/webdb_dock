#!/bin/bash
# chachfilms
# set -x
set -v
# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail

UPLOAD_FOLDER=var/uploads

# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy|reset|dump)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

case $1 in

"empty")
    if psql -U $POSTGRES_USER -lqt | grep chachfilms; then
    echo "Error: database already exists"
    exit 1
    fi
    createdb -U $POSTGRES_USER --echo chachfilms
    psql -U $POSTGRES_USER --echo-errors -d chachfilms -f sql/schema.sql
    mkdir -p ${UPLOAD_FOLDER}
    ;;

  "create")
    $0 empty
    psql -U $POSTGRES_USER --echo-errors -d chachfilms -f sql/data.sql
    cp sql/uploads/* ${UPLOAD_FOLDER}/
    ;;


  "destroy")
    dropdb -U $POSTGRES_USER --echo chachfilms
    rm -rf ${UPLOAD_FOLDER}
    ;;

  "reset")
    $0 destroy
    $0 create
    ;;

  "dump")
    TABLES=`psql -U $POSTGRES_USER -d chachfilms -c '\x' -c '\dt' | grep Name | awk '{print $3}'`
    for TABLE in ${TABLES}; do
    psql -U $POSTGRES_USER -d chachfilms -c "\x" -c "SELECT * FROM ${TABLE}"
    echo
    done
    ;;

*)
    usage
    exit 1
    ;;
esac
